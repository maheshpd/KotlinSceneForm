<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/scene_form_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bear"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bear" />
            <ImageView
                android:id="@+id/cat"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/cat" />
            <ImageView
                android:id="@+id/cow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/cow" />
            <ImageView
                android:id="@+id/dog"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/dog" />
            <ImageView
                android:id="@+id/elephant"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/elephant" />
            <ImageView
                android:id="@+id/ferret"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ferret" />
            <ImageView
                android:id="@+id/hippopotamus"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/hippopotamus" />

            <ImageView
                android:id="@+id/horse"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/horse" />

            <ImageView
                android:id="@+id/koala_bear"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/koala_bear" />

            <ImageView
                android:id="@+id/lion"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lion" />

            <ImageView
                android:id="@+id/reindeer"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/reindeer" />

            <ImageView
                android:id="@+id/wolverine"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/wolverine" />
        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>